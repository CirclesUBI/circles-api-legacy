{
  "name": "user-profile-service",
  "version": "1.1.2",
  "description": "CRUD app for user and organization profiles",
  "main": "src/index.js",
  "preinstall": "nvm use -i 10.15.0 || echo nvm not found: check node version && pause",
  "scripts": {
    "start": "node -r dotenv/config src/app.js",
    "migrate:up": "knex migrate:latest",
    "migrate:down": "knex migrate:rollback",
    "migrate:create": "sh scripts/copyMigration.sh",
    "migrate:seed": "knex seed:run",
    "migrate:all": "npm run migrate:up && npm run migrate:down && npm run migrate:seed",
    "dev": "nodemon -r dotenv/config src/app.js",
    "dev:tunnel": "sh scripts/tunnel.sh && npm run dev",
    "test": "jest --forceExit --setupFiles dotenv/config",
    "retest": "npm run migrate:down && npm run migrate:up && npm test",
    "coverage": "jest --collectCoverageFrom=src/**.js --coverage",
    "token": "node -r dotenv/config scripts/saveCognitoTokenToEnvFile.js",
    "format": "prettier-standard src/**/*.js __tests__/**/*.js",
    "signTx": "node -r dotenv/config scripts/signTx.js",
    "docs": "apidoc -i src/ -o doc/ && apidoc-markdown2 -p ./doc -o API.md && concat -o README.md README.md API.md"
  },
  "jest": {
    "verbose": true,
    "testMatch": [
      "**/__tests__/**/*.[jt]s?(x)"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format",
      "pre-push": "(git-branch-is dev && npm test) || exit 0"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CirclesUBI/circles-api.git"
  },
  "author": "ana0",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CirclesUBI/circles-api/issues"
  },
  "homepage": "https://github.com/CirclesUBI/circles-api#readme",
  "dependencies": {
    "aws-sdk": "^2.376.0",
    "bignumber.js": "^7.2.1",
    "bluebird": "^3.5.3",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "eth-signer": "^0.3.4",
    "ethereumjs-tx": "^1.3.7",
    "express": "^4.16.3",
    "jest": "^24.0.0",
    "jsonwebtoken": "^8.4.0",
    "jwk-to-pem": "^2.0.0",
    "knex": "^0.15.2",
    "objection": "^1.4.0",
    "pg": "^7.6.1",
    "role-acl": "^3.2.0",
    "supertest": "^3.4.2",
    "web3": "1.0.0-beta.37",
    "websocket": "^1.0.28",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "apidoc-markdown2": "^0.3.7",
    "concat": "^1.0.3",
    "dotenv": "^6.0.0",
    "faker": "^4.1.0",
    "git-branch-is": "^2.1.0",
    "husky": "^1.3.1",
    "lodash": "^4.17.11",
    "nodemon": "^1.18.8",
    "prettier-standard": "^9.1.1"
  },
  "nodemonConfig": {
    "events": {
      "restart": "&& npm start"
    },
    "watch": [
      "src"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  }
}
