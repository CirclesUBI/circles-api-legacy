{
  "name": "user-profile-service",
  "version": "1.0.16",
  "description": "CRUD app for user and organization profiles",
  "main": "src/index.js",
  "preinstall": "nvm use -i 10.15.0 || echo nvm not found: check node version && pause",
  "scripts": {
    "start": "node -r dotenv/config src/app.js",
    "migrate:up": "knex migrate:latest",
    "migrate:down": "knex migrate:rollback",
    "migrate:create": "sh scripts/copyMigration.sh",
    "migrate:seed": "knex seed:run",
    "dev": "nodemon -r dotenv/config src/app.js",
    "dev:tunnel": "sh scripts/tunnel.sh && npm run dev",
    "test": "npm run migrate:up && npm run migrate:seed && jest --setupFiles dotenv/config",
    "coverage": "jest --collectCoverageFrom=src/**.js --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CirclesUBI/circles-api.git"
  },
  "author": "ana0",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/CirclesUBI/circles-api/issues"
  },
  "homepage": "https://github.com/CirclesUBI/circles-api#readme",
  "dependencies": {
    "aws-sdk": "^2.376.0",
    "bignumber.js": "^7.2.1",
    "body-parser": "^1.18.3",
    "cors": "^2.8.5",
    "express": "^4.16.3",
    "http-status-codes": "^1.3.0",
    "jest": "^24.0.0",
    "jsonwebtoken": "^8.4.0",
    "jwk-to-pem": "^2.0.0",
    "knex": "^0.15.2",
    "objection": "^1.4.0",
    "pg": "^7.6.1",
    "role-acl": "^3.2.0",
    "supertest": "^3.4.2",
    "web3": "^1.0.0-beta.35",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "aws-sdk-mock": "^4.3.0",
    "bluebird": "^3.5.3",
    "dotenv": "^6.0.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.0.0",
    "faker": "^4.1.0",
    "lodash": "^4.17.11",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.8"
  },
  "nodemonConfig": {
    "events": {
      "restart": "&& npm start"
    },
    "watch": [
      "src"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json"
  }
}
